@model WebApplication1.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive admin dashboard and web application ui kit. ">
    <meta name="keywords" content="login, signin">
    <title>Login Page 1 &mdash; TheAdmin</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,300i" rel="stylesheet">
    <!-- Styles -->
    <link href="~/css/core.min.css" rel="stylesheet">
    <link href="~/css/app.min.css" rel="stylesheet">
    <link href="~/css/style.min.css" rel="stylesheet">
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="~/img/apple-touch-icon.png">
    <link rel="icon" href="~/img/favicon.png">
</head>
<body style="background: url(../img/wallpaper.jpg) no-repeat center center fixed; -webkit-background-size: cover; -moz-background-size: cover; -o-background-size: cover; background-size: cover;">
    <div class="row min-h-fullscreen center-vh p-20 m-0">
        <div class="col-12">
            <div class="card card-shadowed px-50 py-30 w-400px mx-auto" style="max-width: 100%">
                <h5 class="text-uppercase">Giriş Yap</h5>
                <br>
                <form class="form-type-material" method="post" action="@Url.Action("Login","Account")">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Eposta, new { @class = "form-control"})
                        <label for="username">E-Posta Adresi</label>
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Sifre, new { @class = "form-control"})
                        <label for="password">Şifre</label>
                    </div>
                    <div class="form-group flexbox flex-column flex-md-row">
                        <a class="text-muted hover-primary fs-13 mt-2 mt-md-0" href="@Url.Action("ForgottenPassword","Account")">Şifreni mi Unuttun?</a>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-bold btn-block btn-primary" type="submit">Giriş Yap</button>
                    </div>
                    @if(String.IsNullOrEmpty(Model.Error))
                    {

                    }
                    else
                    {
                        <center><span style="color:red;">@Model.Error</span></center>
                    }
                </form>
                <p class="text-center text-muted fs-13 mt-20">Hesabın yok mu? <a class="text-primary fw-500" href="@Url.Action("Register","Account")">Kayıt Ol</a></p>
            </div>
        </div>
    </div>


    <!-- Scripts -->
    <script src="~/js/core.min.js"></script>
    <script src="~/js/app.min.js"></script>
</body>
</html>
